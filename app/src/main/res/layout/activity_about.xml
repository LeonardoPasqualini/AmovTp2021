<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/gradient_backgroud"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/gameName"
        android:textStyle="bold"
        android:fontFamily="@font/dancingbold"
        android:textSize="60sp"
        android:textColor="@color/blueTheme"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="Trabalho AMOV\n\nRealizado por:\nFilipa Rodrigues\nLeonardo Pasqualini\nMarco Mendes\n"
        android:textStyle="bold"
        android:fontFamily="@font/dancingbold"
        android:textSize="30sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2021/2022"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

</LinearLayout>